<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

	<!-- Base Definitions -->

	<definition name="baseDef"		path="/pages/layouts/DefaultLayout.jsp">
		<put name="header"			value="/pages/common/Header.jsp" />
		<put name="footer"			value="/pages/common/Copyright.jsp" />
		<put name="menubar"			value="/pages/StudentMenu.jsp" />
		<put name="body-content"	value="" />
	</definition>

	<definition name="userBaseDef"	extends="baseDef">
		<put name="menubar"			value="/pages/AdminMenu.jsp" />
	</definition>


	<!--
		the fallowing definition are form according to two points :
			1/ the path begin with the actor who can access to the page
			(one of 'admin', 'user', 'student' or 'common'), fallowed by
			a dot
			2/ the path continues with an explicit name of the page to
			show. (ex. edit.user for a page that edit a User)
	-->


	<!-- Common pages definitions -->

	<definition name="common.operation.error" extends="baseDef">
		<put name="body-content"	value="/pages/common/Error.jsp" />
	</definition>

	<definition name="common.operation.ok" extends="baseDef">
		<put name="body-content"	value="/pages/Ok.jsp" />
	</definition>


	<!-- Student's pages definitions -->

	<definition name="student.ident" extends="baseDef">
		<put name="body-content"	value="/pages/form/StudentLogon.jsp" />
	</definition>

	<definition name="student.home" extends="baseDef">
		<put name="body-content"	value="/pages/StudentMain.jsp" />
		<put name="menubar"			value="/pages/StudentMenu.jsp" />
	</definition>
	
	<definition name="student.take.rdv" extends="baseDef">
		<put name="body-content"	value="/pages/form/takeRdv.jsp" />
		<put name="menubar"			value="/pages/StudentMenu.jsp" />
	</definition>
	
	<definition name="student.cancel.rdv" extends="baseDef">
		<put name="body-content"	value="/pages/form/cancelRdv.jsp" />
		<put name="menubar"			value="/pages/StudentMenu.jsp" />
	</definition>


	<!-- User's pages definitions -->

	<definition name="user.home" extends="userBaseDef">
		<put name="body-content"	value="/pages/Main.jsp" />
	</definition>

	<definition name="user.logon" extends="userBaseDef">
		<put name="menubar"			value="" />
		<put name="body-content"	value="/pages/form/UserLogon.jsp" />
	</definition>

	<definition name="user.search.student" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/SearchStudent.jsp" />
	</definition>
	
	<definition name="user.stats" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/stats.jsp" />
	</definition>
	
	<definition name="user.stats.result" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/statsRes.jsp" />
	</definition>

	<definition name="planning.configure" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/setupPlanning.jsp" />
	</definition>

	<!-- Admin's pages definitions -->

	<definition name="admin.edit.user" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/UserDetails.jsp" />
	</definition>

	<definition name="admin.search.user" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/SearchUser.jsp" />
	</definition>

	<definition name="admin.stylesheet.list" extends="userBaseDef">
		<put name="body-content"	value="/pages/form/ListStyleSheet.jsp" />
	</definition>

</tiles-definitions>